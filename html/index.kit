                            <p class="offers__card-option offers__card-option--included"><i
                                    class="fa-solid fa-check"></i>opcja w pakiecie</p>
                        </div>
                        <button class="offers__card-button">Wybierz</button>
                    </div>

                </div>
                <div class="offers__button-container">
                    <a href="offers.html" class="offers__button">Więcej ofert<i class="fa-solid fa-arrow-right"></i></a>
                </div>
            </div>
        </section>
    </main>
    <!-- @include 'footer.kit'-->
    <script src="dist/js/main.min.js"></script>
</body>

</html>